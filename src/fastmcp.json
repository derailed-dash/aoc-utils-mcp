{
  "$schema": "https://gofastmcp.com/public/schemas/fastmcp.json/v1.json",
  "source": {
    "path": "server.py",
    "entrypoint": "mcp"
  },
  "environment": {
    "dependencies": ["asyncio", "fastapi", "requests"],
    "env": {
      "API_URL": "https://api.${ENVIRONMENT}.example.com",
      "AOC_SESSION_COOKIE": "${AOC_SESSION_COOKIE}"
    }    
  },
  "deployment": {
    "transport": "http",
    "log_level": "INFO"
  }
}